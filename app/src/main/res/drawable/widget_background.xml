<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Тёмно-серый фон с лёгкой прозрачностью -->
    <solid android:color="#CC1E1E1E" />

    <!-- Скруглённые углы -->
    <corners android:radius="14dp" />

    <!-- Лёгкая светлая рамка по контуру -->
    <stroke
        android:width="1dp"
        android:color="#33FFFFFF" />

    <!-- Внутренние отступы -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp" />
</shape>
